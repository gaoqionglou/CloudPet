<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="350dp"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/def_icon" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon_avatar"
            android:gravity="center"
            android:text="aaa"
            android:textColor="@color/blue_text_color"
            android:textSize="@dimen/primary_text_size" />


        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/username"
            android:background="@drawable/follow_btn_selector"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:elevation="0dp"
            android:enabled="true"
            android:text="关注"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/pet"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="爱宠"

                />

            <ImageView
                android:id="@+id/icon_pet"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:src="@mipmap/icon_cat" />

            <TextView
                android:id="@+id/petname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:gravity="center"
                android:text="aaa"
                android:textSize="@dimen/primary_text_size" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user"
        android:textColor="#000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/content"
        android:layout_marginTop="3dp"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:id="@+id/like"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/image"
        android:layout_marginEnd="10dp"
        android:gravity="center|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toStartOf="@+id/likeCount"
            android:src="@mipmap/ic_like" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/icon_comment"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/dark_blue_text_color"
            android:textSize="@dimen/primary_text_size" />

        <ImageView
            android:id="@+id/icon_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@+id/commentCount"
            android:src="@mipmap/comment_128" />

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/dark_blue_text_color"
            android:textSize="@dimen/primary_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/like"
        android:background="@drawable/comment_background"
        android:orientation="vertical"
        android:visibility="gone" />
</RelativeLayout>